<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.MauiApiConsumer.Pages.AddEditProduct"
             Title="AddEditProduct">
    <VerticalStackLayout Padding="10">
        <Entry x:Name="txtProductCode" Placeholder="Code" />
        <Entry x:Name="txtProductName" Placeholder="Name" />
        <Entry x:Name="txtPrice" Placeholder="Price" />
        <Button x:Name="btnSave" Text="Save" Margin="0,20" Clicked="btnSave_Clicked" />
        <Button x:Name="btnCancel" Text="Cancel" Clicked="btnCancel_Clicked" />
    </VerticalStackLayout>
    
</ContentPage>